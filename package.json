{
  "name": "ippon-trading-backend",
  "version": "1.0.0",
  "description": "Backend API for Ippon Trading Platform",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && cp -r src/templates dist/ && node dist/app.js",
    "start:prod": "NODE_ENV=production node dist/app.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'npx ts-node -r tsconfig-paths/register' src/app.ts",
    "build": "npx tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.{ts,js}'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
    "db:reset": "npx prisma db push --force-reset && npm run seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.823.0",
    "@aws-sdk/client-dynamodb": "^3.656.0",
    "@aws-sdk/client-s3": "^3.705.0",
    "@aws-sdk/lib-dynamodb": "^3.656.0",
    "@aws-sdk/lib-storage": "^3.705.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/multipart": "^9.0.2",
    "@fastify/swagger": "^9.4.1",
    "@fastify/swagger-ui": "^5.2.1",
    "@prisma/client": "^6.8.2",
    "@types/exceljs": "^0.5.3",
    "@types/node-cron": "^3.0.11",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "fastify": "^5.0.0",
    "fastify-type-provider-zod": "^4.0.2",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "jwt-decode": "^4.0.0",
    "node-cron": "^4.2.0",
    "nodemailer": "^6.9.16",
    "uuid": "^10.0.0",
    "validator": "^13.15.0",
    "winston": "^3.13.1",
    "yup": "^1.6.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.4",
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.5",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.0.0",
    "prisma": "^6.8.2",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "vitest": "^3.1.4"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
